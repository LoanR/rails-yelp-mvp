<h1>Restaurants</h1>
<p><%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-sm btn-default" %></p>
<hr>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <p>
      <%= link_to restaurant.name, restaurant_path(restaurant) %><br>
      <%= restaurant.category %><br>
      <%= restaurant.address %> | <%= restaurant.phone_number %>
    </p>
  </li>
  <% end %>
</ul>
